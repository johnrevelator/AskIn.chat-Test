<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="#a6000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:paddingLeft="40dp"
        android:paddingRight= "40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ProgressBar
                android:id="@+id/progress_more"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="82dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@xml/progress"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/redProf"
                android:minHeight="150dp"
                android:background="@drawable/round_corn_white"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <belka.us.androidtoggleswitch.widgets.ToggleSwitch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    custom:textToggleLeft="Профиль покупателя"
                    android:layout_gravity="center"

                    android:fontFamily="sans-serif-light"
                    android:id="@+id/toggle_switch"
                    custom:activeBgColor="#43bccd"
                    custom:activeTextColor="@android:color/white"
                    custom:inactiveBgColor="@android:color/white"
                    custom:inactiveTextColor="@android:color/darker_gray"
                    custom:separatorColor="@color/gray_very_light"
                    android:paddingTop="8dp"
                    custom:toggleWidth="115dp"
                    custom:textToggleRight="Профиль компании"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="sans-serif-light"

                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/balance"
                    android:paddingTop="12dp"
                    android:textSize="16sp"
                    android:text=""/>
                <ImageView
                    android:layout_width="60dp"
                    android:paddingTop="8dp"
                    android:id="@+id/main_img"
                    android:src="@drawable/mask"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="4dp"
                    android:paddingLeft="16dp"
                    android:fontFamily="sans-serif-medium"

                    android:visibility="gone"
                    android:paddingRight="16dp"
                    android:id="@+id/main_name"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text=""/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="4dp"
                    android:fontFamily="sans-serif-light"

                    android:id="@+id/main_ph"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text=""/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-light"

                    android:id="@+id/main_desc"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="Краткое описание компании"/>
            </LinearLayout>
        </RelativeLayout>
        <!--  <LinearLayout
              android:layout_width="match_parent"
              android:id="@+id/share_variant"

              android:background="@drawable/dialog_item"
              android:layout_height="40dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="Поделиться с друзьями"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:background="@drawable/dialog_item"
              android:id="@+id/socialConnect"

              android:layout_height="40dp">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="Связать соцсети"/>
          </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corn_white"
            android:id="@+id/edit"
            android:layout_marginTop="4dp"
            android:layout_height="35dp">
            <TextView
                android:fontFamily="sans-serif-light"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/action_shop"
                android:gravity="center"
                android:text="Редактировать информацию"/>
        </LinearLayout> <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/round_corn_white"
        android:id="@+id/chain"
        android:layout_marginTop="4dp"
        android:layout_height="35dp">
        <TextView
            android:fontFamily="sans-serif-light"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Привязать соцсети"/>
    </LinearLayout> <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/round_corn_white"
        android:id="@+id/share"
        android:layout_marginTop="4dp"
        android:layout_height="35dp">
        <TextView
            android:fontFamily="sans-serif-light"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Поделиться с друзьями"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corn_white"
            android:id="@+id/retur"
            android:layout_marginTop="4dp"
            android:layout_height="35dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:id="@+id/llMsgStatus"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/bg_toolbar_counter"
                    >

                    <TextView android:id="@+id/tvMsgCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
android:text="1"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <TextView
                android:fontFamily="sans-serif-light"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Техподдержка AskinChat"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_corn_white"
            android:id="@+id/exit"
            android:layout_marginTop="4dp"
            android:layout_height="35dp">
            <TextView
                android:fontFamily="sans-serif-light"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Выйти из аккаунта"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/dialog_item"
            android:id="@+id/cancel"
            android:layout_marginTop="32dp"
            android:layout_height="40dp">
            <TextView
                android:fontFamily="sans-serif-light"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Отмена"/>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>