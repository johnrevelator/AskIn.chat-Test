<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#EBEEEF">



<android.support.v7.widget.RecyclerView android:id="@+id/rvChat"
                                            android:layout_width="match_parent"
      android:layout_below="@+id/toolbar"
android:paddingBottom="4dp"
                                            android:layout_height="match_parent"
                                            android:layout_above="@+id/linearLayout3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="#9900CC00"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:text="Вам предоставлена скидка 3%"
            android:layout_height="match_parent"
            android:gravity="center"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"/>
    </RelativeLayout>




    <LinearLayout android:id="@+id/linearLayout3"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:background="#f6f5f5"
                  android:gravity="center"
                  android:orientation="horizontal" >
        <ImageView android:id="@+id/ivAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/photo"/>

        <EditText android:id="@+id/etText"
                  android:layout_width="match_parent"
            android:textCursorDrawable="@drawable/black_cursor"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:focusableInTouchMode="true"

            android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:background="@drawable/round_corn_white"
                  android:maxLines="4"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
                  android:layout_marginLeft="10dp"/>

        <ImageView android:id="@+id/ivSend"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="10dp"
                   android:src="@drawable/send"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:orientation="vertical"
        android:background="#43bccd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_chat"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout android:id="@+id/llMsgStatus"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
android:layout_marginLeft="8dp"

android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/bg_toolbar_counter"
                    >

                    <TextView android:id="@+id/tvMsgCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"

                        android:textSize="10sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>


            <TextView
                android:text="Запрос клиента"
                android:fontFamily="sans-serif-medium"

                android:textColor="#fff"
    android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView7" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_below="@+id/textView7"
                        android:layout_marginLeft="16dp"
                        android:paddingLeft="16dp"

                        android:layout_height="wrap_content">



                        <TextView

                            android:paddingRight="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:fontFamily="sans-serif-light"

                            android:text="Был в сети"
                            android:id="@+id/status" />
                        <TextView

                            android:paddingRight="16dp"
                            android:visibility="invisible"
                            android:id="@+id/writing_stat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:background="#43bccd"
                            android:fontFamily="sans-serif-light"

                            android:text="печатает..."/>
                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/nav"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:paddingRight="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"

                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:id="@+id/call"
                    android:src="@drawable/call"/>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/shtorka"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="22dp"
                android:id="@+id/timen"
                android:paddingBottom="4dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1.1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:src="@drawable/little_man"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        >
                        <ProgressBar
                            android:layout_width="20dp"
                            android:id="@+id/progBarWalk"
                            android:theme="@style/AppTheme.WhiteAccent"

                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"/>

                    <TextView android:id="@+id/tvMan"
                        android:gravity="center"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12sp"

                        android:layout_marginRight="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:textColor="#fff"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:src="@drawable/little_car"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        >
                    <ProgressBar
                        android:layout_width="20dp"
                        android:id="@+id/progBarDrive"
                        android:theme="@style/AppTheme.WhiteAccent"

                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true"/>


                        <TextView android:id="@+id/tvCar"
                            android:paddingLeft="2dp"
                            android:gravity="center"
                            android:layout_width="match_parent"                        android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-light"
                            android:textSize="12sp"
                            android:textColor="#fff"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:gravity="right|center_vertical"
                android:layout_marginRight="32dp"
                android:id="@+id/last_time"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="16dp"
                    android:id="@+id/gtmap"
                    android:layout_height="30dp"
                    android:src="@drawable/map"/>
                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/invite"
                    android:layout_marginLeft="16dp"

                    android:layout_height="30dp"
                    android:src="@drawable/add"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/sep"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:visibility="invisible"
            android:id="@+id/chat_more"
            android:background="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:layout_height="20dp" />
    </LinearLayout>
       <!-- <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/men"
            android:layout_marginLeft="16dp"
            android:tint="#fff"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView5" />-->
    </LinearLayout>
</RelativeLayout>