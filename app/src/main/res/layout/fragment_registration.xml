<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_log"
    android:fitsSystemWindows="true"

    android:fillViewport="true">


    <!-- <TextView android:id="@+id/tvForgot"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/transparent_selector"
         android:padding="16dp"
         android:textColor="#fff"
         android:gravity="center_horizontal"
         android:layout_alignParentBottom="true"
         android:text="Нет аккаунта? Создайте"/>-->
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/frameLayout">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@drawable/back_log"
                android:orientation="vertical">

   <!-- <TextView android:id="@+id/tvForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_selector"
        android:padding="16dp"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Нет аккаунта? Создайте"/>-->
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:id="@+id/regProg"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="300dp"
                  android:layout_height="wrap_content"
android:id="@+id/registr"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
                android:layout_height="20dp"
                android:layout_alignBottom= "@+id/textView5"
                android:layout_alignTop="@+id/textView5"
                android:layout_toStartOf="@+id/etLogin" />

        <TextView
            android:text="+7"
            android:gravity="center"
            android:textColor="#fff"
android:layout_marginTop="70dp"
            android:paddingRight="24dp"

            android:layout_marginBottom="350dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/textView5"
           />

        <EditText android:id="@+id/etPassword"
            android:layout_width="210dp"
                  android:layout_height="40dp"
            android:layout_below="@id/etLogin"
                  android:layout_marginTop="6dp"
                  android:background="@drawable/textbox"
                  android:hint="Password"
            android:drawableRight="@drawable/pass"

            android:textColor="#fff"
            android:textColorHint="#fff"
                  android:inputType="textPassword"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:textSize="14sp"
            android:layout_toEndOf="@+id/textView5" />
        <EditText android:id="@+id/etPasswordConf"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="6dp"
            android:background="@drawable/textbox"
            android:hint="Password"
            android:drawableRight="@drawable/pass"

            android:textColor="#fff"
            android:textColorHint="#fff"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="14sp"
            android:layout_toEndOf="@+id/textView5" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Войти"
            android:textSize="16sp"
            android:textColor="#fff"
            android:fontFamily="sans-serif-light"
            android:id="@+id/change1"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="2dp"

            android:gravity="center"
            android:text="Зарегистрируйтесь, чтобы иметь доступ к истории
переписки с компаниями на любом устройстве"
            android:textSize="13sp"
            android:textColor="#fff"
            android:layout_above="@+id/etLogin"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_alignParentStart="true" />

        <Button android:id="@+id/btnLogin"
                android:layout_width="150dp"
            android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/reg"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="14sp"
            android:layout_below="@+id/etPasswordConf"
            android:layout_centerHorizontal="true" />

        <EditText android:id="@+id/etLogin"
            android:focusable="true"

            android:layout_width="210dp"
            android:layout_height="40dp"
            android:drawableRight="@drawable/tel"
            android:background="@drawable/textbox"
            android:hint="(___)___ __ __"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/textView5"
            android:layout_toEndOf="@+id/textView5"  >
        </EditText>
            </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/frameLayout">

        <!-- footer -->

    </FrameLayout>
</RelativeLayout>

</ScrollView>