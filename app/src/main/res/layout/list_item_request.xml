<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llParent"
              android:background="@drawable/transparent_selector"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="120dp"
        android:background="@drawable/restan_req"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="16dp"
                    >

        <LinearLayout android:id="@+id/llMsgStatus"
                      android:layout_width="30dp"
                      android:layout_height="30dp"
            android:orientation="vertical"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:background="@drawable/bg_count"
                      android:gravity="center">

            <TextView android:id="@+id/tvMsgCount"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#fff"
                android:fontFamily="sans-serif-light"

                android:textSize="14sp"
                      android:textStyle="bold"
                      tools:text="15"/>

        </LinearLayout>





        <TextView android:id="@+id/tvTime"
                    android:paddingTop="2dp"
            android:textSize="13sp"
            android:fontFamily="sans-serif-light"

            android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/llMsgStatus"
                    android:layout_marginLeft="8dp"
                    android:textColor="#707270"
                    tools:text="12:34"/>

        <TextView
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/textView3"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"

            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignTop="@+id/imageView3" />

        <ImageView
            android:layout_width="20dp"
            android:layout_marginLeft="48dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:tint="@color/bb_darkBackgroundColor"
            app:srcCompat="@drawable/ic_clock"
            android:id="@+id/imageView3"
            android:layout_alignParentBottom="true"
            />

        <TextView android:id="@+id/tvMsgText"
            android:paddingLeft="50dp"
            android:paddingRight="48dp"
            android:paddingTop="36dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"

            android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#3d3d3d"
                  tools:text="Какой-то большой важный и подобное запрос"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="68dp"
            android:paddingLeft="3dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Ответов"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"

                android:id="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="0"
                android:fontFamily="sans-serif-light"

                android:textSize="34sp"
                android:textStyle="normal"
                android:gravity="center_horizontal"
                android:layout_below="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ansCount" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
