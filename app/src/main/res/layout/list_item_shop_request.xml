<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/llParent"
              android:background="@drawable/transparent_selector"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@drawable/restan_req"
        >


        <TextView android:id="@+id/tvCity"
            android:fontFamily="sans-serif-medium"

            android:textSize="11sp"
            android:gravity="center_horizontal"
android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout android:id="@+id/llMsgStatus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/distance"
                android:layout_alignEnd="@+id/distance"
                android:orientation="vertical"
                          android:layout_alignParentRight="true"
                          android:background="@drawable/bg_count"
                          android:gravity="center">

                <TextView android:id="@+id/tvMsgCount"
                    android:fontFamily="sans-serif-light"

                    android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="#fff"
                          android:textSize="14sp"
                          android:textStyle="bold"
                          tools:text="15"/>

            </LinearLayout>
            <ImageView
                android:layout_width="21dp"
                android:paddingLeft="16dp"
                android:layout_height="36dp"
                android:paddingBottom="16dp"
                android:src="@drawable/more"
                android:id="@+id/more"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentEnd="true"
               />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 км"
                android:fontFamily="sans-serif-light"

                android:layout_centerVertical="true"
android:layout_below="@+id/more"
                android:layout_alignEnd="@+id/more"
                android:paddingBottom="2dp"
                android:textSize="13sp"
                android:gravity="right"
                android:id="@+id/distance"/>

            <TextView android:id="@+id/tvTime"
                        android:paddingTop="2dp"
                android:textSize="13sp"
                android:fontFamily="sans-serif-light"

                android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/llMsgStatus"
                        android:layout_marginLeft="8dp"
                        android:textColor="#707270"
                        tools:text="12:34"/>


            <TextView
                android:text="Тут будет последнее сообщение"
                android:fontFamily="sans-serif-light"

                android:layout_marginLeft="64dp"
                android:paddingRight="48dp"
                android:layout_marginTop="3dp"
                android:paddingLeft="4dp"
                android:layout_below="@+id/tvMsgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6" />
            <RatingBar
                android:layout_width="wrap_content"
                android:id="@+id/ratingC"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@id/textView6"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_marginTop="4dp"
                android:transformPivotX="0dp"


                android:layout_gravity="center_horizontal"
                android:progress="5"
                style="?android:attr/ratingBarStyleSmall"

                android:progressDrawable="@drawable/small_custom_ratingbar"


                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/images"
                android:layout_marginTop="4dp"

                android:layout_below="@+id/ratingC"
                android:layout_alignStart="@id/ratingC"
                android:gravity="left"
                android:paddingRight="48dp"
                android:layout_height="30dp"
                >

            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="60dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp">





                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/newMsg"
                    android:src="@drawable/new_msg"/>

                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/newMsg"
                    android:layout_centerInParent="true"
                    android:id="@+id/act_h"
                    android:src="@drawable/ic_heart"/>
                <ImageView
                    android:layout_marginTop="8dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@id/newMsg"
                    android:layout_centerInParent="true"
                    android:visibility="invisible"
                    android:id="@+id/disact_heart"

                    android:src="@drawable/push_heart"/>

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:padding="2dp"

                    android:src="@drawable/mask"
                    android:id="@+id/imageView5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

            <TextView android:id="@+id/tvMsgText"
                android:paddingLeft="68dp"
                android:paddingRight="64dp"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:gravity="top"
                android:fontFamily="sans-serif-light"

                android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textColor="#3d3d3d"
                      tools:text="Какой-то большой"
android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
