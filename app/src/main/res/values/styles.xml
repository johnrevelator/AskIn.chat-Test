<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">#fff</item>
    </style>
    <style name="CameraTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#43bccd</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#43bccd</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">#a6ffffff</item>

    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#000</item>

    </style>
    <style name="CustomFloaterTextAppearance" parent="android:TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">3</item>
    </style>
        <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
            <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
            <item name="android:width">6dp</item>
            <item name="android:height">6dp</item>
        </style>
    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#fff</item>
    </style>
    <style name="EditSearch" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/underline</item>

        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorControlNormal">@android:color/transparent</item>

    </style>
    <style name="ChatStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">#fff</item>

    </style>
    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#fff</item> <!-- Whatever color you want-->
    </style>

</resources>
